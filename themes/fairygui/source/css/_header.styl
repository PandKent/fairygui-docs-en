$header-height = 40px

#header
    background-color transparent
    height: $header-height
    padding $heading-padding-vertical+2 10px
    position relative
    z-index 2

body.docs
    #header
        background-image linear-gradient(to right, #32a39f, #698fde)
        position fixed
        width 100%
        top 0
        left 0
        right 0
        bottom 0
        padding 10px
    #logo
        margin-right 20px
    #mobile-bar::before
        content attr(data-bg-text)
        text-align center
        color $white
        display block
        line-height 1
        position absolute
        margin-top 12px
        font-size 2em
        width 100%

#nav
    list-style-type none
    margin 0
    padding 0
    left 40px
    top $heading-padding-vertical
    height $header-height
    line-height $header-height
    .break
        display none
    li
        display inline-block
        position relative
        margin 0 .6em
        color white
        a
            color white

.nav-link
    padding-bottom 3px
    &:hover, &.current
        border-bottom 2px solid $white
    &.shop
        margin-left 10px

.new-label
    position absolute
    top 3px
    left 110%
    background-color $green
    color #fff
    line-height 16px
    height 16px
    font-size 9px
    font-weight bold
    font-family $code-font
    padding 1px 4px 0 6px
    border-radius 4px

.search-query
    height 30px
    line-height 30px
    box-sizing border-box
    padding 0 15px 0 30px
    border 1px solid #e3e3e3
    color $dark
    outline none
    border-radius 15px
    margin-right 10px
    transition border-color .2s ease
    background #fff url(../images/search.png) 8px 5px no-repeat
    background-size 20px
    vertical-align middle !important
    &:focus
        border-color $green

#logo
    position absolute
    top $heading-padding-vertical
    right 20px
    display inline-block
    font-size 1.5em
    line-height $header-height
    color $dark
    font-family $logo-font
    font-weight 500
    img
        vertical-align middle
        margin-right 6px
        width $header-height * 0.9
        height $header-height * 0.9

#mobile-bar
    position fixed
    top 0
    left 0
    width 100%
    height 50px
    background-image linear-gradient(to right, #32a39f, #698fde)
    z-index 9
    display none
    box-shadow 0 0 2px rgba(0,0,0,.25)
    .menu-button
        position absolute
        width 24px
        height 24px
        top 12px
        left 12px
        background url(../images/menu-white.png) center center no-repeat
        background-size 24px
    .logo
        position absolute
        width 30px
        height 30px
        background url(../images/github-white.png) center center no-repeat
        top 12px
        right 12px
        margin-left -15px
        background-size 30px